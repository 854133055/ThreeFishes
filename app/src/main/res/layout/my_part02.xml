<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black2"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_my_myAcount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_listItemHeight"
                android:layout_marginTop="5dp"
                android:text="我的账号"
                style="@style/TxtTitle"
                 />
            <View
                android:background="@color/black2"
                android:layout_width="match_parent"
                android:layout_height="1.0dip" />


            <TextView
                android:id="@+id/tv_my_collect"
                android:text="收藏"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_listItemHeight"
                style="@style/TxtTitle"
                 />
            <View
                android:background="@color/black2"
                android:layout_width="match_parent"
                android:layout_height="1.0dip" />


            <TextView
                android:id="@+id/tv_my_settings"
                style="@style/TxtTitle"
                android:layout_marginTop="@dimen/my_listitem_IntervalHei"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_listItemHeight"
                android:text="设置" />
            <View
                android:background="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />


            <TextView
                android:id="@+id/tv_my_complain"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="48.25dp"
                android:text="内容申述" />
            <View
                android:background="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />

            <!--<TextView
                android:id="@+id/txt_about"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/my_listItemHeight"
                android:layout_marginTop="@dimen/my_listitem_IntervalHei"
                android:text="设置" />
            <View
                android:background="@color/black2"
                android:layout_width="match_parent"
                android:layout_height="1.0dip" />-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
