<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tablayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black2"
    android:layout_height="286.615dp">

    <ImageView
        android:id="@+id/ivback"
        android:layout_width="match_parent"
        android:layout_height="217.68dp"
        android:src="@drawable/my_background"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="137.87dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14.512dp"
        android:layout_marginRight="14.512dp"
        app:cardCornerRadius="10.88dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/usrHeadImage"
            android:layout_height="@dimen/usrHeadImage"
            android:layout_marginTop="@dimen/usrHeImageMarRightTop"
            android:layout_marginLeft="@dimen/usrHeImageMarRightTop"
            app:civ_border_width="2dp"
            android:src="@drawable/icon_head"
            app:civ_border_color="#f2f2f2f2"/>

        <!--<ImageButton
            android:layout_width="72.56dp"
            android:layout_height="72.56dp"
            android:background="@drawable/icon_head"
            android:layout_marginTop="14.512dp"
            android:layout_marginLeft="14.512dp"
            android:id="@+id/head"
            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="韦binbin"
            android:layout_marginLeft="97.959dp"
            android:layout_marginTop="21.768dp"
            android:textColor="#333333"
            android:textSize="16dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android话题优秀划水者"
            android:layout_marginLeft="97.959dp"
            android:layout_marginTop="45.53dp"
            android:textSize="12dp"
            android:textColor="#666666"
            />

        <include
            layout="@layout/cardviewpart" />


    </android.support.v7.widget.CardView>

</RelativeLayout>
