<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#dddddd">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp">


        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="分类"
            android:textColor="#333333"
            android:gravity="center_horizontal"
            />

        <View
            android:background="@color/colorState"
            android:layout_width="match_parent"
            android:layout_marginTop="50.7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_listen"
            android:layout_width="wrap_content"
            android:layout_height="30.11dp"
            android:textSize="12sp"
            android:layout_marginTop="25.4dp"
            android:layout_marginLeft="51dp"
            android:textColor="#666666"
            android:text="聆听"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_artical"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="文摘"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_song"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="诗歌"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="原创"
            android:gravity="center_vertical"
            />

        <View
            android:background="@color/colorState"
            android:layout_width="match_parent"
            android:layout_marginTop="21.76dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp" />


        <TextView
            android:id="@+id/tv_food"
            android:layout_width="wrap_content"
            android:layout_height="30.11dp"
            android:textSize="12sp"
            android:layout_marginTop="25.4dp"
            android:layout_marginLeft="51dp"
            android:textColor="#666666"
            android:text="美食"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_newC"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="新潮"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_tradition"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="传统"
            android:gravity="center_vertical"
            />
        <View
            android:background="@color/colorState"
            android:layout_width="match_parent"
            android:layout_marginTop="21.76dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_trip"
            android:layout_width="wrap_content"
            android:layout_height="30.11dp"
            android:textSize="12sp"
            android:layout_marginTop="25.4dp"
            android:layout_marginLeft="51dp"
            android:textColor="#666666"
            android:text="旅行"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="时间"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_space"
            android:layout_width="wrap_content"
            android:layout_height="38.82dp"
            android:textSize="16sp"
            android:layout_marginLeft="51dp"
            android:textColor="#333333"
            android:text="空间"
            android:gravity="center_vertical"
            />



    </LinearLayout>



</LinearLayout>
