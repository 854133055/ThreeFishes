<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AddTheme"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context="com.android_threefishes.threefish.a3fish.Add_Activity">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="15.9sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="发布"/>

        <TextView
            android:id="@+id/add_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:textSize="13.7sp"
            android:layout_marginRight="12dp"
            android:text="发送"
            />

    </RelativeLayout>




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginLeft="18.14dp"
        android:layout_marginRight="18.14dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/materialeditext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入标题"
                app:met_primaryColor="#dddddd"
                android:textSize="13.7sp"
                android:layout_marginTop="16.32dp"
                android:layout_marginLeft="23.58dp"
                android:layout_marginRight="10dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/materialeditext"
                android:hint="输入内容"
                android:textSize="13.7sp"
                android:background="@null"
                android:layout_marginTop="16.32dp"
                android:layout_marginLeft="23.58dp"
                android:layout_marginRight="10dp"
                android:id="@+id/editText" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="按住录音"
                android:background="@drawable/shape_arc"
                android:layout_marginLeft="23.58dp"
                android:layout_marginRight="23.58dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="添加图片"
                android:background="@drawable/shape_arc"
                android:layout_marginLeft="23.58dp"
                android:layout_marginRight="23.58dp"
                android:layout_above="@id/btn2"
                android:layout_marginBottom="10dp"
                />





        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
