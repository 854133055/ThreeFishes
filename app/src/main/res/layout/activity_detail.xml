<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5F5"
    tools:context="com.android_threefishes.threefish.a3fish.DetailActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:background="@color/colorPrimary"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/detail_iv_back"
                android:layout_marginTop="43.53dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fishpicture"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/detail_usrImag"
                android:layout_width="63.5dp"
                android:layout_height="63.5dp"
                android:layout_marginTop="8.88dp"
                android:paddingLeft="18.14dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/icon_head"/>

            <TextView
                android:id="@+id/detail_tv_usrName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="éŸ¦binbin"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="65.7dp"/>

            <ImageView
                android:id="@+id/detail_iv_artcleFlags"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:layout_marginRight="70.28dp"
                android:src="@drawable/listen"
                android:layout_alignParentRight="true"/>

            <include
                android:layout_below="@id/detail_iv_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/acitivity_detail_part1" />

            <ImageView
                android:id="@+id/detial_iv_isFollow"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="12.7dp"
                android:src="@drawable/ic_follow"
                android:layout_alignTop="@+id/detail_iv_artcleFlags"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</ScrollView>
