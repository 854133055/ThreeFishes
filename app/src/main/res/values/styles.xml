<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorState</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">0dp</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">@color/colorState</item>
    </style>


    <style name="TxtTitle" parent="@style/img_Style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/setting_item_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="UsrInfNum" parent="@style/img_Style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="UsrInfTitle" parent="@style/img_Style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#29abe2</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="img_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

</resources>
